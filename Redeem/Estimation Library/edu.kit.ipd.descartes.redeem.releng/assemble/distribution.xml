<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dist</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<dependencySets>
		<dependencySet>
			<includes>
				<include>edu.kit.ipd.descartes.redeem:edu.kit.ipd.descartes.redeem.releng.p2</include>
			</includes>
			<outputDirectory>lib</outputDirectory>
			<unpack>true</unpack>
			<unpackOptions>
				<includes>
					<include>plugins/*.jar</include>
				</includes>
				<excludes>
					<exclude>plugins/org.eclipse.*.jar</exclude>
				</excludes>
			</unpackOptions>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>edu.kit.ipd.descartes.redeem:edu.kit.ipd.descartes.redeem.bayesplusplus.java</include>
				<include>edu.kit.ipd.descartes.redeem:edu.kit.ipd.descartes.redeem.ipopt.java</include>
				<include>edu.kit.ipd.descartes.redeem:edu.kit.ipd.descartes.redeem.nnls.java</include>
			</includes>
			<outputDirectory>lib/native/win32</outputDirectory>
			<unpack>true</unpack>
			<unpackOptions>
				<includes>
					<include>*.dll</include>
				</includes>
			</unpackOptions>
			<useProjectArtifact>false</useProjectArtifact>	
		</dependencySet>
		<dependencySet>
			<includes>
				<include>edu.kit.ipd.descartes.redeem:edu.kit.ipd.descartes.redeem.bayesplusplus.java</include>
				<include>edu.kit.ipd.descartes.redeem:edu.kit.ipd.descartes.redeem.ipopt.java</include>
				<include>edu.kit.ipd.descartes.redeem:edu.kit.ipd.descartes.redeem.nnls.java</include>
			</includes>
			<outputDirectory>lib/native/linux</outputDirectory>
			<unpack>true</unpack>
			<unpackOptions>
				<includes>
					<include>*.so</include>
				</includes>
			</unpackOptions>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>edu.kit.ipd.descartes.redeem:edu.kit.ipd.descartes.redeem.frontend</include>
			</includes>
			<outputDirectory>.</outputDirectory>
			<unpack>true</unpack>
			<unpackOptions>
				<includes>
					<include>matlab/**</include>
				</includes>
			</unpackOptions>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>edu.kit.ipd.descartes.redeem:edu.kit.ipd.descartes.redeem.releng</include>
			</includes>
			<outputDirectory>doc</outputDirectory>
			<unpack>true</unpack>
			<useProjectArtifact>false</useProjectArtifact>
			<useProjectAttachments>true</useProjectAttachments>
		</dependencySet>	
	</dependencySets>
</assembly>