<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dist</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>edu.kit.ipd.descartes.redeem:edu.kit.ipd.descartes.redeem.releng.p2</include>
			</includes>
			<binaries>
				<outputDirectory>lib</outputDirectory>
				<unpack>true</unpack>
				<unpackOptions>
					<includes>
						<include>plugins/*.jar</include>
					</includes>
					<excludes>
						<exclude>plugins/org.eclipse.*.jar</exclude>
						<exclude>plugins/*.win32.jar</exclude>
					</excludes>
				</unpackOptions>
			</binaries>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>edu.kit.ipd.descartes.redeem:edu.kit.ipd.descartes.redeem.bayesplusplus.win32</include>
				<include>edu.kit.ipd.descartes.redeem:edu.kit.ipd.descartes.redeem.ipopt.win32</include>
				<include>edu.kit.ipd.descartes.redeem:edu.kit.ipd.descartes.redeem.nnls.win32</include>
			</includes>
			<binaries>
				<outputDirectory>lib/native/win32</outputDirectory>
				<unpack>true</unpack>
				<unpackOptions>
					<includes>
						<include>*.dll</include>
					</includes>
				</unpackOptions>
			</binaries>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>edu.kit.ipd.descartes.redeem:edu.kit.ipd.descartes.redeem.matlab</include>
			</includes>
			<binaries>
				<outputDirectory>.</outputDirectory>
				<unpack>true</unpack>
				<unpackOptions>
					<includes>
						<include>matlab/</include>
					</includes>
				</unpackOptions>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>